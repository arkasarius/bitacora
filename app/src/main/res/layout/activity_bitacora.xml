<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="ordonez.roger.bitacoraactivity.BitacoraActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AddId"
        android:layout_alignBottom="@+id/AddId"
        android:layout_toLeftOf="@+id/AddId"
        android:layout_toStartOf="@+id/AddId"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingRight="10dp"
        android:text=""
        android:hint="Text nou event ..."

        />

    <Button
        android:id="@+id/AddId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:text="+"

        />

    <ListView
        android:id="@+id/EditableID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/AddId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        />
</RelativeLayout>
